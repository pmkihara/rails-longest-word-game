<div class="container">
  <h1>New Game</h1>

  <div class="letters">
    <% @random_letters.each do |letter| %>
      <div class="letter"><%= letter %></div>
    <% end %>
  </div>

  <div class="user-input">
    <p>What is the longest word you can find?</p>
    <form action="score" method="post">
      <input type="text" name="user_input" class="text-input">
      <input type="hidden" id="letters-array" name="letters-array" value="<%= @random_letters.join %>">
      <input type="submit" class="form-btn" value="Play">
    </form>
  </div>

</div>
